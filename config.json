{
  "type": "Settings",
  "audio": {
    "input": {
      "encoding": "mulaw",
      "sample_rate": 8000
    },
    "output": {
      "encoding": "mulaw",
      "sample_rate": 8000,
      "container": "none"
    }
  },
  "agent": {
    "language": "en",
    "listen": {
      "provider": {
        "type": "deepgram",
        "model": "nova-3",
        "keyterms": ["hello", "goodbye", "medicine", "doctor", "prescription"]
      },
      "barge_in": true,
      "vad": {
        "mode": "default",
        "silence_duration_ms": 500
      }
    },
    "think": {
      "provider": {
        "type": "open_ai",
        "model": "gpt-4o-mini",
        "temperature": 0.7
      },
      "prompt": "You are a helpful AI assistant focused on pharmacy and healthcare. Answer questions clearly and politely, and provide guidance about medicines when asked."
    },
    "speak": {
      "provider": {
        "type": "deepgram",
        "model": "aura-2-thalia-en"
      }
    },
    "greeting": "Hello! Welcome to the pharmacy helpline. How can I assist you today?",
    "fallback": "Sorry, I didnâ€™t catch that. Could you please repeat?"
  },
  "callbacks": {
    "events": "wss://YOUR-NGROK-ID.ngrok-free.app/events"
  },
  "debug": true
}
